@using myfinance_web_dotnet.Domain
@{
    ViewData["Title"] = "Plano de Contas";
}

<h1>Plano de Contas</h1>
<br />
<a type="button" class="btn btn-primary" asp-area="" asp-controller="PlanoConta" asp-action="Cadastro">Criar item de
    Plano de Conta</a>
<br /><br />
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Descrição</th>
        <th>Tipo</th>
        <th>#</th>
        <th>#</th>
    </tr>

    @{
        foreach (var item in (List<PlanoConta>)ViewBag.Lista)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nome</td>
                <td>@item.Tipo</td>
                <td><button type="button" class="btn btn-warning">Editar</button>
                </td>
                <td><button type="button" class="btn btn-danger">Excluir</button>
                </td>
            </tr>

        }
    }
</table>